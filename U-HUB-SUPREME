    _G.U_HUB_CORE.ShowFOV = Value
end)


-- ระบบทำงาน (วางล่างสุดของไฟล์)
task.spawn(function()
    while true do
        task.wait(0.1) -- ช่วยลดอาการแล็ก
        pcall(function()
            for _, player in pairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer and player.Character then
                    local char = player.Character
                    local highlight = char:FindFirstChild("U_ESP_Master")
                    
                    -- ถ้ายังไม่มี Highlight ให้สร้างใหม่
                    if not highlight then
                        highlight = Instance.new("Highlight")
                        highlight.Name = "U_ESP_Master"
                        highlight.Parent = char
                    end
                    
                    -- ดึงสีที่เลือกมาใช้ (ถ้าไม่มีให้ใช้สีแดง)
                    local useColor = _G.U_HUB_CORE.EspColor or Color3.fromRGB(255, 0, 0)
                    
                    if _G.ESP_Selected == "เรืองแสง (Chams)" then
                        highlight.Enabled = true
                        highlight.FillTransparency = 0.5
                        highlight.OutlineTransparency = 1
                        highlight.FillColor = useColor
                    elseif _G.ESP_Selected == "เส้นรอบตัว (Outline)" then
                        highlight.Enabled = true
                        highlight.FillTransparency = 1
                        highlight.OutlineTransparency = 0
                        highlight.OutlineColor = useColor
                    else
                        highlight.Enabled = false -- ปิดเมื่อเลือก "ปิด"
                    end
                end
            end
        end)
    end
end)


-- [[ ระบบป้องกันการตรวจจับเบื้องต้น ]]
if not game:IsLoaded() then game.Loaded:Wait() end

local function AntiBan()
    local g = getgenv()
    -- ซ่อนสคริปต์จากการตรวจจับ
    if g.hookmetamethod then
        local old; old = hookmetamethod(game, "__namecall", function(self, ...)
            local method = getnamecallmethod()
            if not checkcaller() and (method == "Kick" or method == "kick") then
                return nil -- บล็อกการสั่งเตะออกจากเกม
            end
            return old(self, ...)
        end)
    end
end
pcall(AntiBan)


